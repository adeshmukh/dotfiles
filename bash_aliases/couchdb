function cdb_restart() {
  sudo launchctl unload /usr/local/Library/LaunchDaemons/org.apache.couchdb.plist
  sudo launchctl load   /usr/local/Library/LaunchDaemons/org.apache.couchdb.plist
}

function cdb_session() {
  export COUCHDB_URL="$1"
  curl -X PUT $COUCHDB_URL
  echo "Using DB: $COUCHDB_URL"
}

function cdb_get() {
  curl -X GET $COUCHDB_URL/$1
}

function cdb_put() {
  curl -X PUT $COUCHDB_URL/$1 -d "$2"
}

function cdb_reset() {
  curl -X DELETE $COUCHDB_URL
}

function cdb_changes() {
  curl -X GET $COUCHDB_URL/_changes
}
